{
  "openapi": "3.0.1",
  "info": { "title": "OpenAPI definition", "version": "v0" },
  "servers": [
    { "url": "http://localhost:55908", "description": "Generated server url" }
  ],
  "tags": [{ "name": "Students", "description": "the Students API" }],
  "paths": {
    "/student": {
      "post": {
        "tags": ["Students"],
        "operationId": "addStudent",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Student" }
            }
          },
          "required": true
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/students": {
      "get": {
        "tags": ["Students"],
        "summary": "Get a list of all students",
        "description": "This is just an example 'single-point' route to get to know OAS with Java.",
        "operationId": "getStudents",
        "responses": {
          "200": {
            "description": "Found the students",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Student" }
              }
            }
          },
          "500": { "description": "Failed to find students" }
        }
      }
    },
    "/student/{name}": {
      "get": {
        "tags": ["Students"],
        "summary": "Get a student",
        "description": "Something about getting a student by name.",
        "operationId": "getStudent",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "Name of student.",
            "required": true,
            "schema": { "type": "string" },
            "example": "Sajal"
          }
        ],
        "responses": {
          "200": {
            "description": "Found the student",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Student" }
              }
            }
          },
          "500": { "description": "Student not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Student": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "cls": { "type": "string" },
          "country": { "type": "string" }
        }
      }
    }
  }
}
